<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/permission_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Permission Name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <ImageView
            android:id="@+id/expand_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:contentDescription="Set temporary permission"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/permission_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/duration_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:singleSelection="true"
        android:paddingBottom="8dp"
        app:chipSpacingHorizontal="4dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_1h"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_4h"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4h" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_8h"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8h" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_12h"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12h" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_1d"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1d" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_till"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date" />

    </com.google.android.material.chip.ChipGroup>

</LinearLayout>