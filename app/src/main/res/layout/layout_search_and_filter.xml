<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <!-- The Search Trigger Icon (Visible initially & stays visible) -->
    <ImageView
        android:id="@+id/iv_search_trigger"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/ic_search"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Search"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?android:attr/textColorPrimary" />

    <!-- The Expandable Container (Hidden initially) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_search_bar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_search_trigger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Input Field Container -->
        <EditText
            android:id="@+id/et_search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:background="@null"
            android:minHeight="48dp"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:paddingStart="16dp"
            android:paddingEnd="40dp" 
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Filter Icon (Inside EditText at the end) -->
        <ImageView
            android:id="@+id/iv_filter_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_filter_list"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Filter"
            app:tint="?attr/colorPrimary"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="@id/et_search_input"
            app:layout_constraintTop_toTopOf="@id/et_search_input"
            app:layout_constraintBottom_toBottomOf="@id/et_search_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
