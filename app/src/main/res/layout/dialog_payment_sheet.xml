<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Confirmation"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_total_amount_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Total: 0.00"
            android:textAlignment="viewEnd"

            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"

            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <!-- Status Indicators -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_purchase_status_sheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:padding="8dp"
                android:background="@drawable/border_radius"
                android:gravity="center"
                android:text="Status: Draft"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_payment_status_sheet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:padding="8dp"
                android:background="@drawable/border_radius"
                android:gravity="center"
                android:text="Payment: Pending"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorSecondary"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Tax Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_tax_percentage_sheet"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:hint="Tax %">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_tax_percentage_sheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@id/et_tax_amount_sheet" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_tax_amount_sheet"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:hint="Tax Amount">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_tax_amount_sheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@id/et_discount_percentage_sheet" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Discount Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_discount_percentage_sheet"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:hint="Discount %">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_discount_percentage_sheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@id/et_discount_amount_sheet" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_discount_amount_sheet"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:hint="Discount Amount">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_discount_amount_sheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@id/et_amount_paid_sheet" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Payment Method Spinner -->
        <Spinner
            android:id="@+id/spinner_payment_method_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_radius"
            android:padding="8dp"
            android:minHeight="48dp" />

        <!-- Amount Paid and Due -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_amount_paid_sheet"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount Paid (e.g., 50.00)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_amount_paid_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/et_notes_sheet" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_amount_due_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"

            android:padding="10dp"
            android:background="@color/colorOnPrimary"
            android:text="Amount Due: 0.00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Notes Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_notes_sheet"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Notes">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_notes_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:scrollbars="vertical"
                android:overScrollMode="ifContentScrolls"
                android:isScrollContainer="true"
                android:lines="3"
                android:maxLines="5" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Finalize Purchase Button with Long Press -->
        <Button
            android:id="@+id/button_finalize_purchase_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hold 3 Sec to Finalize Purchase"
            android:backgroundTint="@color/colorSuccess"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Press and hold the button to finalize purchase"
            android:textSize="14sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_bar_hold"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0"
            android:visibility="gone" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
