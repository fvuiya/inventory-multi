<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.HomeFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSurface"
        android:text="Inventory Manager App"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/itemOne"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_product"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Product"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/manageCustomersLayout"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_customer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Customers"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/manageOrdersLayout"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_order"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Orders"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android.gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/manageSalesLayout"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_sales"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Sales"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemFive"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_purchase"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Purchase"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/manageSuppliersLayout"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_customer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Suppliers"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/manageMarketingLayout"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_marketing"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Marketing"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/manageReportsLayout"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:src="@drawable/ic_report" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Reports"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/manage_roles_layout"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:src="@drawable/ic_customer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Manage Roles"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:id="@+id/manageExpensesLayout"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_expense"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Expenses"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemEleven"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_passive_income"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Passive Income"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemTwelve"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/border_radius">
                <ImageView
                    android:gravity="center"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_return"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurface"
                    android:text="Return"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>