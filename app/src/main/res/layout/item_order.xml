<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_order"
            android:layout_marginEnd="12dp"
            app:tint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/textViewOrderIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: "
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ORD12345"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewCustomerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer: CustName (ID: CUST001)"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewOrderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: 2023-01-01"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $100.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="end">

        <ImageButton
            android:id="@+id/buttonViewOrderDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_view_details"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="View Details"
            android:padding="8dp"
            app:tint="@color/colorPrimaryDark"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/buttonEditOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_editl"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit Order"
            android:padding="8dp"
            app:tint="#009900"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/buttonDeleteOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Order"
            android:padding="8dp"
            app:tint="@android:color/holo_red_dark"/>
    </LinearLayout>

</LinearLayout>
