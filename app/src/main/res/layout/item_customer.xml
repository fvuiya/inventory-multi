<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <ImageView
            android:id="@+id/iv_customer_image_item"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_customer"
            android:layout_marginEnd="12dp"
            android:contentDescription="Customer Image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/textViewCustomerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Address"
                android:layout_marginTop="8dp"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:id="@+id/textViewCustomerAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age: 0"
                android:layout_marginTop="4dp"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:id="@+id/textViewCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: N/A"
                android:layout_marginTop="4dp"
                android:textColor="?android:attr/textColorSecondary"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonEditCustomer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/colorPrimaryDark"
            android:contentDescription="Edit Customer"
            android:layout_marginStart="8dp"/>

        <ImageButton
            android:id="@+id/buttonDeleteCustomer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@android:color/holo_red_dark"
            android:contentDescription="Delete Customer"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
