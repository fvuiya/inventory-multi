<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_add_photo_alternate"
            android:scaleType="centerCrop"
            android:contentDescription="Product Image" />

        <!-- Buttons for Camera and Gallery -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_camera"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"
                app:icon="@drawable/ic_camera_alt" />

            <Button
                android:id="@+id/btn_gallery"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Gallery"
                app:icon="@drawable/ic_photo_library" /> <!-- You'''ll need an icon -->
        </LinearLayout>

        <!-- Product Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_product_name"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Product Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Brand (Dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_brand"
            style="?attr/textInputFilledExposedDropdownMenuStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Brand">

            <AutoCompleteTextView
                android:id="@+id/actv_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category (Dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_category"
            style="?attr/textInputFilledExposedDropdownMenuStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Category">

            <AutoCompleteTextView
                android:id="@+id/actv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Product Code and Barcode Scanner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:baselineAligned="false">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_product_code"
                style="?attr/textInputFilledStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Product Code">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_product_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_barcode_scanner"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="8dp"
                android:src="@drawable/ic_barcode_scanner"
                android:contentDescription="Scan Barcode"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Stocks -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_stocks"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Stocks">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_stocks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Unit (Dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_unit"
            style="?attr/textInputFilledExposedDropdownMenuStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Unit">

            <AutoCompleteTextView
                android:id="@+id/actv_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Purchase Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_purchase_price"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Purchase Price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_purchase_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cost Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_cost_price"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Cost Price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cost_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- MRP -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_mrp"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="MRP">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_mrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Wholesale Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_wholesale_price"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Wholesale Price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_wholesale_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dealer Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_dealer_price"
            style="?attr/textInputFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Dealer Price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_dealer_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons (Save/Cancel) -->
        <!-- These might be part of the dialog'''s button panel already -->
        <!-- If not, you can add them here, e.g., inside a horizontal LinearLayout -->

    </LinearLayout>
</ScrollView>