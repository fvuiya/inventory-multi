<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_marketing"
            android:layout_marginEnd="12dp"
            app:tint="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/textViewOfferTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Offer Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <ImageButton
            android:id="@+id/buttonEditOffer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/colorPrimaryDark"
            android:contentDescription="Edit Offer"
            android:layout_marginStart="8dp"/>

        <ImageButton
            android:id="@+id/buttonDeleteOffer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@android:color/holo_red_dark"
            android.contentDescription="Delete Offer"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewOfferDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offer Description"
        android:layout_marginTop="8dp"
        android:textColor="?android:attr/textColorSecondary"/>

</LinearLayout>
