<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewSaleCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            tools:text="Customer Name"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textViewSaleDateTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewSaleDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="01 Jan 2024"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewSaleCustomerName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewSaleCustomerAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            tools:text="123 Main St"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintEnd_toStartOf="@+id/buttonEditSale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSaleCustomerName" />

        <!-- Buttons preserved but moved out of primary visual path -->
        <ImageButton
            android:id="@+id/buttonEditSale"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_editl"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/colorPrimaryDark"
            android:contentDescription="Edit Sale"
            app:layout_constraintEnd_toStartOf="@+id/buttonDeleteSale"
            app:layout_constraintTop_toBottomOf="@+id/textViewSaleCustomerName"
            app:layout_constraintBottom_toBottomOf="@+id/textViewSaleTotalBill" />

        <ImageButton
            android:id="@+id/buttonDeleteSale"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@android:color/holo_red_dark"
            android:contentDescription="Delete Sale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSaleCustomerName"
            app:layout_constraintBottom_toBottomOf="@+id/textViewSaleTotalBill" />


        <TextView
            android:id="@+id/textViewSaleTotalBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="$0.00"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSaleCustomerAddress"
            android:visibility="gone"/> <!-- Hiding original total to use new structure if needed, or re-using ID. I will re-use ID but position it bottom right. -->

        <TextView
            android:id="@+id/textViewSaleTotalBill_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="$100.00"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSaleCustomerAddress" />

        <TextView
            android:id="@+id/textViewSaleAmountPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Paid: $70.00"
            android:textAppearance="?attr/textAppearanceCaption"
            android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewSaleTotalBill_new"
            app:layout_constraintEnd_toStartOf="@+id/textViewSaleTotalBill_new" />

        <TextView
            android:id="@+id/textViewSaleAmountDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Due: $30.00"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewSaleTotalBill_new"
            app:layout_constraintEnd_toStartOf="@+id/textViewSaleAmountPaid" />
            
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>